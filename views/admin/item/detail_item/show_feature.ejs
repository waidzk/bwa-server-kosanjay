<div
  class="tab-pane fade show active"
  id="show-feature"
  role="tabpanel"
  aria-labelledby="home-tab"
>
  <!-- DataTales Item -->
  <div class="card shadow mb-4">
    <div class="card-body">
      <div class="row">
        <div class="col-md-5">
          <form
            action="/admin/item/add/feature"
            method="POST"
            enctype="multipart/form-data"
          >
            <div class="form-group">
              <label for="name">Name</label>
              <!-- <input
                          type="text"
                          class="form-control"
                          name="name"
                          placeholder="Enter name"
                          required
                        /> -->
              <select class="form-control" name="name" required>
                <option>--- Options Feature ---</option>
                <option value="Wifi">Wifi</option>
                <option value="Bathroom">Bathroom</option>
                <option value="Living Room">Living Room</option>
                <option value="Television">Television</option>
                <option value="Air Conditioner">Air Conditioner</option>
                <option value="Kitchen">Kitchen</option>
              </select>
            </div>
            <div class="form-group">
              <label for="name">QTY</label>
              <input
                type="number"
                class="form-control"
                name="qty"
                placeholder="Enter quantity"
                required
              />
            </div>
            <input type="hidden" value="<%= itemId %>" name="itemId" />
            <button type="submit" class="btn btn-primary">Save</button>
          </form>
        </div>
        <div class="col-md-7">
          <div class="table-responsive">
            <table
              class="table table-bordered"
              id="dataTable"
              width="100%"
              cellspacing="0"
            >
              <thead>
                <tr>
                  <th>No</th>
                  <th>Name</th>
                  <th>QTY</th>
                  <th>Image URL</th>
                  <th>Action</th>
                </tr>
              </thead>
              <tbody>
                <% for(let i = 0; i < feature.length; i++){ %>
                <tr>
                  <td><%= i + 1 %></td>
                  <td><%= feature[i].name %></td>
                  <td><%= feature[i].qty %></td>
                  <% if(feature[i].name == "Wifi") { %>
                  <td>
                    <img src="/images/wifi.png" alt="imageUrl" width="70px" />
                  </td>
                  <% } else if(feature[i].name == "Bathroom") { %>
                  <td>
                    <img src="/images/bath.png" alt="imageUrl" width="70px" />
                  </td>
                  <% } else if(feature[i].name == "Television") { %>
                  <td>
                    <img
                      src="/images/television.png"
                      alt="imageUrl"
                      width="70px"
                    />
                  </td>
                  <% } else if(feature[i].name == "Kitchen") { %>
                  <td>
                    <img
                      src="/images/kitchen.png"
                      alt="imageUrl"
                      width="70px"
                    />
                  </td>
                  <% } else if(feature[i].name == "Living Room") { %>
                  <td>
                    <img
                      src="/images/livingroom.png"
                      alt="imageUrl"
                      width="70px"
                    />
                  </td>
                  <% } else if(feature[i].name == "Air Conditioner") { %>
                  <td>
                    <img src="/images/ac.png" alt="imageUrl" width="70px" />
                  </td>
                  <% } %>
                  <td>
                    <form
                      action="/admin/item/<%= itemId %>/feature/<%= feature[i].id %>?_method=DELETE"
                      method="POST"
                    >
                      <a
                        href="javascript:void()"
                        type="button"
                        class="btn btn-warning btn-circle btn-sm button-update"
                        data-id="<%= feature[i].id %>"
                        data-name="<%= feature[i].name %>"
                        data-qty="<%= feature[i].qty %>"
                        ><i class="fas fa-edit"></i
                      ></a>
                      <button
                        type="submit"
                        class="btn btn-danger btn-circle btn-sm"
                      >
                        <i class="fas fa-trash"></i>
                      </button>
                    </form>
                  </td>
                </tr>
                <% } %>
              </tbody>
            </table>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
